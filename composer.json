{
    "name": "indigo-bloom-432910-i7",
    "description": "Web application for Loan Documents Processing using GenAI",
    "require": {
        "mongodb/mongodb": "^1.9",
        "ext-mysqli": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"file_exists('vendor/autoload.php') || exit('Install dependencies using `composer install`');\""
        ],
        "post-update-cmd": [
            "@php -r \"file_exists('vendor/autoload.php') || exit('Install dependencies using `composer install`');\""
        ]
    },
    "config": {
        "preferred-install": "dist",
        "optimize-autoloader": true
    }
}
